{
    "editor.accessibilitySupport": "off",
    "editor.fontFamily": "Sarasa Mono SC, Iosevka, JetBrains Mono, JetBrainsMono Nerd Font, Sarasa Gothic SC, PingFang SC, HarmonyOS Sans SC, Consolas",
    "editor.fontSize": 17,
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.mouseWheelZoom": true,
    "editor.renderWhitespace": "boundary",
    "editor.smoothScrolling": true,
    "editor.wordWrap": "on",
    "terminal.integrated.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,
    "workbench.editor.wrapTabs": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "workbench.iconTheme": "office-material-icon-theme",
    "vscode-office.editorLanguage": "zh_CN",
    "workbench.colorTheme": "One Dark Pro",
    "settingsSync.ignoredSettings": [
        "-C_Cpp.clang_format_path"
    ],
    "code-runner.runInTerminal": true,
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "vscode-office.openOutline": true,
    "chatgpt.lang": "cn",
    "files.autoSave": "afterDelay",
    "window.zoomLevel": 1
}
